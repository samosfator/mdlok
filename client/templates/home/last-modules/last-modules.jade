template(name='LastModulesBlock')
  if isThereLastModules
    .last-scores-block.mdl-cell.mdl-card.mdl-shadow--2dp.mdl-color--green-100(class='{{width}}')
      .last-scores-block-title.mdl-card__title.mdl-color--green-500
        h2.mdl-card__title-text.mdl-color-text--white Останні бали
      .last-score-cards
        each lastModule in lastModules
          +LastScoreCard lastModule
