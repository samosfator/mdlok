template(name='SubjectCard')
  .subject-card.mdl-card.mdl-shadow--2dp.mdl-cell.mdl-cell--4-col.mdl-cell--12-col-phone.mdl-cell--6-col-tablet.mdl-cell--4-col-desktop(data-name=name, data-type=type)
    .mdl-card__title.mdl-card--expand(class='{{colorFor name}}')
      h2.subject-name.mdl-card__title-text.mdl-color-text--white= name
      .mdl-layout-spacer
      span.subject-total-score.mdl-color-text--white= totalScore
