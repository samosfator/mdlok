template(name='NavDrawerNavigation')
  nav.nav-drawer-navigation.mdl-navigation.mdl-color--grey-50
    each link in this
      if link.spaceBefore
        .mdl-layout-spacer

      a.mdl-navigation__link(class=link.class, href=link.route)
        i.mdl-color-text--blue-grey-400.material-icons(role='presentation')= link.icon
        span.mdl-color-text--blue-grey-700.inner-text= link.caption
